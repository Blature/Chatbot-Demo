FROM node:20-slim

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* yarn.lock* ./

# Install dependencies
RUN npm ci || yarn install

# Copy TypeScript config
COPY tsconfig.json ./

# Copy source code
COPY src ./src
COPY scripts ./scripts
COPY data ./data

# Build the application
RUN npm run build

# Expose port
EXPOSE 3000

# Start the application
CMD ["npm", "run", "start:prod"]